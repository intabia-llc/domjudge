{% extends "@DOMJudge/team/base.html.twig" %}
{% import _self as self %}

{#{% block title %}Edit source of s{{ submission.submitid }} - {{ parent() }}{% endblock %}#}

{% block extrahead %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/ace/ace.js') }}" charset="utf-8"></script>
{% endblock %}

{% block content %}

<h1>
    {{ data.problem.name }} {{ data.problem.probid }}
</h1>

<h2>{{ data.user.name }}</h2>
<h2>{{ data.team.name }}</h2>
<h2>{{ data.contest.name }}</h2>

<div class="row" style="height: 100%">

    <div class="col" style="height: 100%">

        <h3 class="teamoverview">Problem text</h3>
        <embed src="/team/problems/{{ data.problem.probid }}/text" class="col" style="height: 100%"
               type="application/pdf">

    </div>

    <div class="col">
        {{ form_start(form) }}

        <h3 class="teamoverview">Problem solution</h3>

        <ul class="nav nav-tabs source-tab-nav">

            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" role="tab">
                    Code:
                </a>
            </li>

        </ul>

        <div class="tab-content source-tab">

            <div class="tab-pane fade show active" id="source_code" role="tabpanel">
                {{ file.sourcecode | codeEditor(1, 'java', true, 'form_source' ~ file.rank) }}
                {#{{ file.sourcecode | codeEditor(idx, submission.language.aceLanguage, true, 'form_source' ~ file.rank) }}#}

                <script>
                    $(function () {
                        $('#form_source{{ file.rank }}').closest('.form-group').hide();
                    });
                </script>
            </div>

        </div>


        <div class="row">
            <div class="col-lg-4">
                {{ form_widget(form) }}
            </div>
        </div>

        {#<div class="form-group" data-entry-point>#}
        {#{{ form_label(form.entry_point) }}#}
        {#{{ form_widget(form.entry_point) }}#}
        {#<small class="form-text text-muted">The entry point for your code.</small>#}
        {#</div>#}

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn-success btn">
                <i class="fas fa-cloud-upload-alt"></i> Submit
            </button>
        </div>
    </div>

    {{ form_end(form) }}

    {% endblock %}
